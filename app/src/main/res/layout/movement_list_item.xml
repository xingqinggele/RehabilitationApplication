<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_marginLeft="10dp"
        android:id="@+id/tv1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv1"
        app:layout_constraintRight_toLeftOf="@+id/iv1"
        android:textColor="#418dfa"
        android:textSize="14sp"
        android:text="有氧运动"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/iv1"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@mipmap/go_movement_iv"
        android:layout_width="70dp"
        android:layout_height="30dp"/>

    <TextView
        android:textSize="13sp"
        android:id="@+id/tv2"
        android:layout_marginRight="30dp"
        app:layout_constraintLeft_toLeftOf="@id/tv1"
        app:layout_constraintRight_toLeftOf="@+id/iv1"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tv1"
        android:text="运动方式：奥术大师大所大所大所大所奥术大师大所大所大所大所奥术大师大所大所大所大所"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:textSize="13sp"
        android:id="@+id/tv3"
        android:layout_marginRight="30dp"
        app:layout_constraintLeft_toLeftOf="@id/tv1"
        app:layout_constraintRight_toLeftOf="@+id/iv1"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tv2"
        android:text="预警值：\n奥术大师大所大所大所大所奥术大师大所大所大所大所奥术大师大所大所大所大所"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <View
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="#eff1f3"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tv3"
        android:layout_width="0dp"
        android:layout_height="1dp"/>

</android.support.constraint.ConstraintLayout>