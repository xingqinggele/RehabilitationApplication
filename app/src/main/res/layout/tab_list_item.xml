<?xml version="1.0" encoding="utf-8"?>
<com.lihang.ShadowLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:hl_cornerRadius="5dp"
    app:hl_shadowColor="#2a000000"
    app:hl_shadowLimit="5dp">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginLeft="10dp"
            android:singleLine="true"
            android:layout_marginRight="15dp"
            android:ellipsize="end"
            app:layout_constraintRight_toLeftOf="@+id/title_iv"
            android:id="@+id/title_tv"
            android:textColor="#000"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/title_iv"
            android:text=""
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:textColor="#999999"
            android:textSize="13sp"
            android:id="@+id/data_tv"
            app:layout_constraintBottom_toBottomOf="@+id/title_iv"
            app:layout_constraintLeft_toLeftOf="@+id/title_tv"
            android:text="2012-02-30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/title_iv"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:background="#418dfa"/>

    </android.support.constraint.ConstraintLayout>

</com.lihang.ShadowLayout>