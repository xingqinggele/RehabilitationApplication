<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/app_color">

    <RelativeLayout
        android:id="@+id/team_query_relative"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="25dp"
                android:padding="5dp"
                android:src="@mipmap/right_black_return_iv" />

        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="详情"
            android:textColor="#000"
            android:textSize="18sp" />

    </RelativeLayout>


     <android.support.constraint.ConstraintLayout
                android:layout_marginTop="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/know_layout_bg">

                <View
                    android:id="@+id/line1"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/app_color"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="4dp"
                    android:layout_height="20dp"/>


                <TextView
                    android:id="@+id/title_tv"
                    android:layout_marginRight="20dp"
                    app:layout_constraintRight_toRightOf="parent"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:layout_marginLeft="10dp"
                    app:layout_constraintLeft_toRightOf="@+id/line1"
                    app:layout_constraintTop_toTopOf="@+id/line1"
                    android:text="标题标题标题标题"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:id="@+id/author_tv"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@+id/title_tv"
                    app:layout_constraintLeft_toLeftOf="@+id/title_tv"
                    android:textSize="14sp"
                    android:textColor="@color/app_color"
                    android:text="作者"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_marginLeft="30dp"
                    app:layout_constraintLeft_toRightOf="@+id/author_tv"
                    app:layout_constraintBottom_toBottomOf="@+id/author_tv"
                    app:layout_constraintTop_toTopOf="@+id/author_tv"
                    android:textSize="14sp"
                    android:textColor="#999"
                    android:text="2023-12-28"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <WebView
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="40dp"
                    app:layout_constraintTop_toBottomOf="@+id/author_tv"
                    android:id="@+id/web_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </android.support.constraint.ConstraintLayout>


</LinearLayout>