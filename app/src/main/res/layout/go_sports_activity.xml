<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/team_query_relative"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="25dp"
                android:padding="5dp"
                android:src="@mipmap/right_black_return_iv" />

        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="运动"
            android:textColor="#000"
            android:textSize="18sp" />

    </RelativeLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <TextView
            android:id="@+id/tv1"
            android:textColor="#1cdf94"
            android:textStyle="bold"
            android:textSize="14sp"
            android:text="运 动 时 间"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/tv1"
            android:id="@+id/sport_time_tv"
            android:textColor="#1cdf94"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="13:20"
            app:layout_constraintRight_toRightOf="@+id/tv1"
            app:layout_constraintLeft_toLeftOf="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="40dp">

        <LinearLayout
            android:layout_marginRight="10dp"
            android:id="@+id/line1"
            android:paddingTop="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="20dp"
            android:background="#b5abf9"
            app:layout_constraintRight_toLeftOf="@+id/guideline"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <TextView
                android:layout_marginTop="10dp"
                android:textColor="#000000"
                android:textSize="16sp"
                android:text="血压值(mmhg)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_gravity="right"
                android:textColor="@color/white"
                android:textSize="26sp"
                android:text="120"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_gravity="right"
                android:textColor="#000000"
                android:textSize="16sp"
                android:text="舒张压"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="20dp"
                android:layout_gravity="right"
                android:textColor="@color/white"
                android:textSize="26sp"
                android:text="90"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginBottom="30dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="right"
                android:textColor="#000000"
                android:textSize="16sp"
                android:text="收缩压"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <android.support.constraint.Guideline
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <LinearLayout
            android:paddingTop="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="20dp"
            android:orientation="vertical"
            android:id="@+id/line2"
            android:layout_marginLeft="10dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/guideline"
            app:layout_constraintTop_toTopOf="@+id/line1"
            app:layout_constraintHeight_percent="0.47"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#8ec3fb">

            <TextView
                android:layout_marginTop="10dp"
                android:textColor="#000000"
                android:textSize="16sp"
                android:text="血氧值(%)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <TextView
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                android:textSize="26sp"
                android:text="120"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:paddingTop="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="20dp"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/guideline"
            app:layout_constraintHeight_percent="0.47"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#f7ab7a">

            <TextView
                android:layout_marginTop="10dp"
                android:textColor="#000000"
                android:textSize="16sp"
                android:text="心率值(bmp)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <TextView
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                android:textSize="26sp"
                android:text="120"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>


    </android.support.constraint.ConstraintLayout>

    <LinearLayout
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginRight="25dp"
            android:background="#1cdf94"
            android:layout_width="130dp"
            android:layout_height="130dp"/>

        <ImageView
            android:layout_marginLeft="25dp"
            android:background="#cccecd"
            android:layout_width="130dp"
            android:layout_height="130dp"/>


    </LinearLayout>



</LinearLayout>